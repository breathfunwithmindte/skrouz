<form class="filter-form">
  <h2 class="aside-h1">Φιλτράρισμα</h2>

  <% for( let i = 0; i < filters.length; i++ ) { %>
      <% var f = filters[i] %> 
      <% if (f.filtertype === 'radio') { %>
        <!-- RADIO TYPE FILTER -->
        <div class="filter-field-wrapper-multi">
          <br />
          <strong><%= f.filterlabel %> <%= f.filtermethod %> </strong>
          <br />
          <% for( let j = 0; j < f.filtervalues.length; j++ ) { %>
            <%- include("FComps/radio", {method: f.filtermethod, name: f.filtername, valuename: f.filtervalues[j].name, value: f.filtervalues[j].value})  %> 
          <% } %>
        </div>

      <% } %> 
  <% } %>
</form>