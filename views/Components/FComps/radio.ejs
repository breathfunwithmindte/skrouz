<style>
  .radio_input_visible
  {
    width: 1rem;
    height: 1rem;
    border: 1px solid var(--color_light);
    border-radius: 100%;
    padding: 0.14rem;
    margin-right: 14px;
    display: flex; justify-content: center; align-items: center;

  }
  .radio_input_visible::after{
    content: "";
    width: 84%;
    height: 84%;
    background-color: var(--primary);
    display: block;
    border-radius: 100%;
    transform: scale(0);
  }

  .radio_input_real:checked + .radio_input_visible::after {
    transform: scale(1);
    box-shadow: 0px 0px 2.5px 2.5px rgba(8, 156, 124, 0.45),
                      0px 0px 15px 0.5px rgba(8, 156, 124, 0.15);
  }

  .radio-label
  {
    width: 100%;
    display: flex;
    flex-direction: row-reverse;
    justify-content: flex-end;
    padding: 5px;
    cursor: pointer;
  }

  .span1
  {
    background-color: red;
  }

</style>

<div class="my-radio">
 
  <label for="#id#<%= name + value %>" class="radio-label">
    <%= value %>
    <input type="radio" name="<%= name %>" id="#id#<%= name + value %>" class="radio_input_real" style="display: none;" />
    <div class="radio_input_visible"></div>
    
  </label>
  
</div>